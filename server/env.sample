# --- Video Meeting Configuration ---
# 화상회의 최대 참가자 수
VIDEO_MEETING_MAX_PARTICIPANTS=2
# 한 화면에 표시될 최대 비디오 스트림 수
VIDEO_MEETING_MAX_VIDEO_STREAMS=2

# --- File Storage ---
# 저장소 타입: 'local' (기본값) 또는 's3'
FILE_STORAGE_TYPE=local
# 파일 서빙 URL (로컬 개발 환경)
FILE_SERVE_URL=http://localhost:5000/files
# 파일 업로드 경로 (로컬, 기본값: C:/project/file)
#FILE_UPLOAD_PATH=C:/project/file

# --- AWS S3 Storage (프로덕션용, 선택사항) ---
# FILE_STORAGE_TYPE=s3으로 설정 시 아래 변수들 필요
#AWS_REGION=ap-northeast-2
#AWS_ACCESS_KEY_ID=your_access_key_here
#AWS_SECRET_ACCESS_KEY=your_secret_access_key_here
#AWS_S3_BUCKET=your-bucket-name
#S3_FOLDER_PREFIX=chat-files

# --- File Upload Limits (파일 타입별 크기 제한, MB 단위) ---
# 이미지 파일 최대 크기 (기본값: 10MB)
MAX_IMAGE_SIZE_MB=10
# 문서 파일 최대 크기 (기본값: 20MB)
MAX_DOC_SIZE_MB=20
# 동영상 파일 최대 크기 (기본값: 300MB)
MAX_VIDEO_SIZE_MB=300
# 오디오 파일 최대 크기 (기본값: 100MB)
MAX_AUDIO_SIZE_MB=100

# --- File Upload Timeouts (파일 타입별 API 타임아웃, 밀리초 단위) ---
# 이미지 업로드 타임아웃 (기본값: 60000ms = 60초)
IMAGE_UPLOAD_TIMEOUT_MS=60000
# 문서 업로드 타임아웃 (기본값: 60000ms = 60초)
DOC_UPLOAD_TIMEOUT_MS=60000
# 동영상 업로드 타임아웃 (기본값: 300000ms = 5분)
VIDEO_UPLOAD_TIMEOUT_MS=300000
# 오디오 업로드 타임아웃 (기본값: 120000ms = 2분)
AUDIO_UPLOAD_TIMEOUT_MS=120000
